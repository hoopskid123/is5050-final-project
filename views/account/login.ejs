<!-- Start User Account -->
<div class="container py-5">
    <div class="row py-5">
        <form class="col-md-5 m-auto" action="/account/create" method="POST" role="form">
            <div class="row">
                <div class="col col-md-6">
                    <h3>Create an Account</h3>
                </div>
            </div>
            <div class="row">
                <div class="col col-md-6">
                    <% if (flashMessages) { %>
                        <% if (flashMessages.createAccountSuccess) { %>
                        <div style="color: green">
                            <%= flashMessages.createAccountSuccess %>
                        </div>
                        <% } else if (flashMessages.createAccountError) { %>
                        <div style="color: red">
                            <%= flashMessages.createAccountError %>
                        </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <input type="text" class="form-control mt-1" id="fname" name="fname" placeholder="First Name">
                </div>
                <div class="form-group col-md-6 mb-3">
                    <input type="text" class="form-control mt-1" id="lname" name="lname" placeholder="Last Name">
                </div>
            </div>
            <div class="mb-3">
                <input type="email" class="form-control mt-1" id="email" name="email" placeholder="Email">
            </div>
            <div class="mb-3">
                <input type="password" class="form-control mt-1" id="password" name="password" placeholder="Password">
            </div>
            <div class="row">
                <div class="col text-start mt-2">
                    <button type="submit" class="btn btn-success btn-lg px-3">Create Account</button>
                </div>
            </div>
        </form>
        <form class="col-md-5 m-auto" action="/account/login" method="POST" role="form">
            <div class="row">
                <div class="col col-md-6">
                    <h3>Login</h3>
                </div>
            </div>
            <div class="row">
                <div class="col col-md-6">
                    <% if (flashMessages) { %>
                        <% if (flashMessages.loginError) { %>
                        <div style="color: red">
                            <%= flashMessages.loginError %>
                        </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <div class="mb-3">
                <input type="email" class="form-control mt-1" id="email" name="email" placeholder="Email">
            </div>
            <div class="mb-3">
                <input type="password" class="form-control mt-1" id="password" name="password" placeholder="Password">
            </div>
            <div class="row">
                <div class="col text-start mt-2">
                    <button type="submit" class="btn btn-success btn-lg px-3">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- End Contact -->