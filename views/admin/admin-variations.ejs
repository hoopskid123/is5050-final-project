<div class="tab-pane fade" id="admin-variations">
    <div class="row pb-3">
        <div class="col-12">
            <div class="row pb-3 justify-content-end">
                <div class="col-auto">
                    <a role="button" class="btn btn-primary btn-sm" href="<%=`/admin/variation/create`%>">+ New Variation</a>
                </div>
            </div>
            <table class="table">
                <thead class="thead-light">
                    <tr class="table-active">
                        <th class="align-middle">Name</th>
                        <th class="align-middle">Slug</th>
                        <th class="align-middle">Type</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% variations.forEach(variation => { %>
                        <tr>
                            <td class="align-middle"><%= variation.name %></td>
                            <td class="align-middle"><%= variation.slug %></td>
                            <td class="align-middle"><%= variation.type.name %></td>
                            <td class="align-middle text-end"><a role="button" class="btn btn-outline-secondary btn-sm" href="<%=`/admin/variation/${variation.slug}`%>">Edit</a></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>