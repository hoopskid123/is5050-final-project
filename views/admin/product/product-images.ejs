<div class="tab-pane fade" id="product-images">
    <form action="<%=`/product/${product.slug}/add-image`%>" method="POST" role="form" encType="multipart/form-data">
        <div class="row pb-3 align-items-center">
            <% product.images.forEach(image => { %>
                <div class="col-auto">
                    <img src="<%= `${image.url}` %>" alt="<%= `${image.alt}` %>" class="d-block ui-w-125-175 rounded">                
                </div>
            <% }); %>
        </div>
        <div class="row pb-3 align-items-center">
            <div class="col-auto">
                <label class="btn btn-outline-primary">
                    Select new photo
                    <input type="file" name="image" id="image" class="account-settings-fileinput" required>
                </label>
                <div class="text-light small mt-1">Allowed JPG, JPEG, or PNG</div>
            </div>
        </div>
        <div class="form-group col-8 py-2">
            <button type="submit" class="btn btn-success btn-lg px-3">Upload Image</button>
        </div>
    </form>
</div>