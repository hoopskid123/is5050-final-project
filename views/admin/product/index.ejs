
<div class="container light-style flex-grow-1 container-p-y py-5">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a  href="/admin">Admin Panel</a></li>
            <li class="breadcrumb-item"><a  href="/admin#products">Product</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= product ? product.title : 'New Product' %></li>
        </ol>
    </nav>

    <div class="card overflow-hidden">
        <div class="row no-gutters row-bordered row-border-light px-3 py-4">
            <div class="col-md-2 pt-0">
                <div class="nav flex-column nav-pills me-3" id="v-pills-tab">
                    <button class="nav-link active" data-tab="details" id="details-tab" data-bs-toggle="pill" data-bs-target="#product-details" type="button">Details</button>
                    <% if(product) { %>
                        <button class="nav-link" data-tab="images" id="images-tab" data-bs-toggle="pill" data-bs-target="#product-images" type="button">Images</button>
                        <button class="nav-link" data-tab="delete" id="delete-tab" data-bs-toggle="pill" data-bs-target="#product-delete" type="button">Delete</button>
                    <% } %>
                </div>
            </div>
            <div class="col-md-10">
                <div class="tab-content h-100" id="v-pills-tabContent">
                    
                    <%- include('product-details') %>
                    <% if(product) { %>
                        <%- include('product-images') %>
                        <%- include('product-remove') %>
                    <% } %>

                </div>
            </div>
        </div>
    </div>

</div>