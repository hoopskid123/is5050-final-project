
<div class="container light-style flex-grow-1 container-p-y py-5">

    <h4 class="font-weight-bold py-3 mb-4">
        <a class="h4" style="color:inherit; font-size: inherit !important; font-weight: inherit !important;" href="/admin">Admin Panel</a> > Product > <%= product ? product.title : '' %>
    </h4>

    <div class="card overflow-hidden">
        <div class="row no-gutters row-bordered row-border-light px-3 py-4">
            <div class="col-md-2 pt-0">
                <div class="nav flex-column nav-pills me-3" id="v-pills-tab">
                    <button class="nav-link active" id="product-details-tab" data-bs-toggle="pill" data-bs-target="#product-details" type="button">Details</button>
                    <% if(product) { %>
                        <button class="nav-link" id="product-images-tab" data-bs-toggle="pill" data-bs-target="#product-images" type="button">Images</button>
                        <button class="nav-link" id="product-delete-tab" data-bs-toggle="pill" data-bs-target="#product-delete" type="button">Delete</button>
                    <% } %>
                </div>
            </div>
            <div class="col-md-10">
                <div class="tab-content h-100" id="v-pills-tabContent">
                    
                    <%- include('product-details') %>
                    <% if(product) { %>
                        <%- include('product-images') %>
                        <%- include('product-remove') %>
                    <% } %>

                </div>
            </div>
        </div>
    </div>

</div>